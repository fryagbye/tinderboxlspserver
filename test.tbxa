function processData(vData) {
    // ここで引数の vData がハイライトされます
    // コメントの中にある vData や文字列の中の "vData" は無視されるはずです。
    var:string vMessage = "The value of vData is: " + vData;

    if (vData > 0) {
        $Text = vMessage;
    }
}
var:number vCounter = 0;

// vCounter をループで使います
$MyList.each(vCounter) {
    // 別の変数定義
    var vTemp = vCounter * 2;
    processData(vTemp);
}
